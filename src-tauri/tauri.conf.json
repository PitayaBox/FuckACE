{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PitayaBox",
  "version": "0.5.3",
  "identifier": "com.shshouse.PitayaBox",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:8787",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "PitayaBox",
        "width": 960,
        "height": 720,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "center": true,
        "transparent": false,
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "shell:default",
            "process:allow-exit"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}